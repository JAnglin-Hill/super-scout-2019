<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true">
        <EditText
            android:id="@+id/matchNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Match #"
            android:textSize="25sp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:onClick="sendData"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/button" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/matchNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">
            <TextView
                android:id="@+id/allianceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blue Alliance"
                android:textColor="#0000FF"
                android:textSize="30dp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:id="@+id/teamOneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team1 #"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/teamTwoNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team2 #"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/teamThreeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team3 #"
                android:textSize="25dp"
                android:inputType="number"
                android:layout_marginTop="25dp"/>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+id/listLayout"
        android:layout_alignParentRight="true"
        android:layout_weight="1">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/view_files_received"
            android:layout_above="@+id/deleteAll">

        </ListView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete all"
            android:id="@+id/deleteAll"
            android:onClick="deleteAllFiles"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/Upload_File"
            android:layout_alignTop="@+id/deleteAll"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="upload_Clicked"/>
    </RelativeLayout>
</LinearLayout>


