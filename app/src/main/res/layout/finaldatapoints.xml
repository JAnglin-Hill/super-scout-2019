<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/finalScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Final Alliance Score"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finalScoreTextView"
        android:layout_centerHorizontal="true"
        android:hint="Score"
        android:inputType="number"
        android:textSize="25sp"
        android:id="@+id/finalScoreEditText"
        android:gravity="center"
        android:clickable="false" />
    <TextView
        android:id="@+id/allRotorsSpinningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Number of Spinning Rotors"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"/>

    <TextView
        android:id="@+id/KiloPascalsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40kPA Reached?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/rotorTeleText"
        android:layout_centerHorizontal="true" />
    <ToggleButton
        android:id="@+id/boilerToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/KiloPascalsTextView"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:text="Breach"
        android:textSize="20sp"
        android:textOff="false"
        android:textOn="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finalFoulEditText"
        android:layout_below="@+id/finalScoreEditText"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:hint="Fouls"
        android:gravity="center"
        android:textSize="25sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rotorAutoText"
        android:gravity="center"
        android:hint="Auto"
        android:textSize="25sp"
        android:inputType="number"
        android:layout_above="@+id/KiloPascalsTextView"
        android:layout_toLeftOf="@+id/dummy"
        android:layout_toStartOf="@+id/dummy"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rotorTeleText"
        android:gravity="center"
        android:hint="Tele"
        android:textSize="25sp"
        android:inputType="number"
        android:layout_below="@+id/allRotorsSpinningTextView"
        android:layout_toRightOf="@+id/dummy"
        android:layout_toEndOf="@+id/dummy" />

    <Space android:id="@+id/dummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/allRotorsSpinningTextView"
        android:visibility="invisible"/>
</RelativeLayout>